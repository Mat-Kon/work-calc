generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String
  materials Material[]
  services  Service[]
  Order     Order[]
}

model Material {
  id          String  @id @default(uuid())
  name        String
  unit        String
  count       Int
  masterId    String
  master      User    @relation(fields: [masterId], references: [id])
  Order       Order?  @relation(fields: [orderId], references: [id])
  orderId     String?
  costPerUnit Int
}

model Service {
  id          String  @id @default(uuid())
  name        String
  unit        String
  count       Int
  masterId    String
  master      User    @relation(fields: [masterId], references: [id])
  Order       Order?  @relation(fields: [orderId], references: [id])
  orderId     String?
  costPerUnit Int
}

model Order {
  id            String     @id @default(uuid())
  orderNumber   String
  address       String
  customerName  String
  phone         String
  dateMeeting   DateTime
  dateStartWork DateTime
  materials     Material[]
  services      Service[]
  masterId      String
  master        User       @relation(fields: [masterId], references: [id])
}
